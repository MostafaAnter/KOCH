<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:contentDescription="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg"
        android:scaleType="fitXY"
        android:isScrollContainer="false"
        />


    <RelativeLayout
        android:id="@+id/content_conversation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/chatInputMessage"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            app:stackFromEnd="true"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/chat_self_item"/>

        <LinearLayout
            android:id="@+id/chatInputMessage"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentBottom="true"
            android:background="#69818B"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:contentDescription="@null"
                android:id="@+id/send_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:src="@drawable/chat_send_btn"
                android:background="@drawable/circle_green"/>

            <EditText
                android:id="@+id/messageInput"
                android:layout_width="0dp"
                android:layout_height="@dimen/editTextHeight"
                android:layout_weight="1"
                android:inputType="text"
                android:padding="3dp"
                android:layout_margin="5dp"
                android:background="@drawable/border_shape_green_radius_chat" />

            <ImageView
                android:contentDescription="@null"
                android:layout_width="30dip"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@drawable/send_application"/>

        </LinearLayout>

    </RelativeLayout>
</FrameLayout>